{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.ts", "*.js"]
    }
  },
  "include": [
    "src/**/*",
    "bin/**/*",
    "fix-imports.js"
  ],
  "exclude": ["node_modules", "dist"]
} 